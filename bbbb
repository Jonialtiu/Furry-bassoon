#include<iostream>
using namespace std;
int main(){
    int t;
    cin>>t;
    while(t--){
        int n,i,sum_two=0,a;
        cin>>n;
        for(i=0;i<n;i++){
            cin>>a;
            if((i==0)||(i==1)) sum_two +=a;
        }
        if(sum_two<=a) cout<<"1 2 "<<n<<"\n";
        else cout<<"-1\n";
    }
    return 0;
}
